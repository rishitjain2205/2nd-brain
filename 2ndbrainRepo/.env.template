# KnowledgeVault Environment Configuration
# Copy this file to .env and fill in your values

# OpenAI API Key (Required)
OPENAI_API_KEY=your_openai_api_key_here

# LlamaParse API Key (Optional - for advanced document parsing)
LLAMAPARSE_API_KEY=your_llamaparse_api_key_here

# Enron Dataset Path
ENRON_MAILDIR=/Users/rishitjain/Downloads/maildir

# Neo4j Configuration (Optional - uses local by default)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here

# ============================================================================
# Slack Integration (Multi-Tenant Bot)
# ============================================================================
# Create a Slack App at https://api.slack.com/apps
# Enable OAuth & Permissions, Event Subscriptions, and add Bot Token Scopes

# Slack App Credentials (from Basic Information page)
SLACK_CLIENT_ID=your_slack_client_id
SLACK_CLIENT_SECRET=your_slack_client_secret
SLACK_SIGNING_SECRET=your_slack_signing_secret

# Base URL for OAuth callbacks (your deployed app URL)
# Local: http://localhost:5003
# Production: https://your-app.onrender.com
BASE_URL=http://localhost:5003

# ============================================================================
# Google OAuth (Gmail Integration)
# ============================================================================
# Create OAuth credentials at https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:5003/api/connectors/gmail/callback
